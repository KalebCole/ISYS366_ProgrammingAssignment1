@page "/athlete/marathonsignup"
@model ProgrammingAssignment1UI.Pages.Athlete.MarathonSignUpModel
@{
}

<div id="section-for-GET">
	<h1>Section for GET requests</h1>
	
		@if (Model?.WordFromIndex != null)
		{
		<p>
			GET requests are used to retrieve data from the server. For example, look at the URL, it says @Model.NumFromIndex and @Model.WordFromIndex
		</p>
	}
	else
	{
		<p>GET requests are used to retrieve data from the server. For example, look at the URL. There is nothing there, so we are not retrieving any data from the server</p>
	}

</div>

<h1>Marathon Registration Form</h1>

<div id="post-then-redirect" style="padding: 20px">
	<h2>Post to AddInfo and then redirect to Index</h2>
	<!-- This will post to the AddInfo page and then redirect to the Index page using a Get.
	It is handled in the AddInfo.cshtml.cs onPost method. -->
	<form method="post">
		<div id="registration-form">
			<div class="mb-3">
				<label asp-for="CurrentAthlete.Name">Name:</label>
				<input type="text" asp-for="CurrentAthlete.Name" required />
			</div>
			<div class="mb-3">
				<label asp-for="CurrentAthlete.Email">Email:</label>
				<input type="text" asp-for="CurrentAthlete.Email" required />
			</div>
			<div class="mb-3">
				<label asp-for="CurrentAthlete.PhoneNumber">Phone Number:</label>
				<input type="text" asp-for="CurrentAthlete.PhoneNumber" />
			</div>
			<div class="mb-3">
				<label asp-for="CurrentAthlete.Birthday">Birthday:</label>
				<input type="date" asp-for="CurrentAthlete.Birthday" />
			</div>
			<div class="mb-3">
				<label asp-for="CurrentAthlete.Gender">Gender:</label>
				<input type="text" asp-for="CurrentAthlete.Gender" />
			</div>
		</div>

		<input type="submit" value="Register" />
	</form>
</div>





<div id="get-to-index">
	<h2>Get to Index</h2>
	<form method="get" asp-page="Index">
		<div id="registration-form">
			<div class="mb-3">
				<label asp-for="CurrentAthlete.Name">Name:</label>
				<input type="text" asp-for="CurrentAthlete.Name" required />
			</div>
			<div class="mb-3">
				<label asp-for="CurrentAthlete.Email">Email:</label>
				<input type="text" asp-for="CurrentAthlete.Email" required />
			</div>
			<div class="mb-3">
				<label asp-for="CurrentAthlete.PhoneNumber">Phone Number:</label>
				<input type="text" asp-for="CurrentAthlete.PhoneNumber" />
			</div>
			<div class="mb-3">
				<label asp-for="CurrentAthlete.Birthday">Birthday:</label>
				<input type="text" asp-for="CurrentAthlete.Birthday" />
			</div>
			<div class="mb-3">
				<label asp-for="CurrentAthlete.Gender">Gender:</label>
				<input type="text" asp-for="CurrentAthlete.Gender" />
			</div>
		</div>

		<input type="submit" value="Register" />
	</form>
</div>

